package main

import (
	"context"
	"dagger/go/internal/dagger"
	"fmt"
)

type Go struct {
	GoVersion string
	Source    *dagger.Directory
}

func New(
	{{ if .GoVersion -}}
	// +default="{{ .GoVersion }}"
	{{ else -}}
	// [heads up] We could not infer the go version, so we default to latest
	// +default="latest"
	{{ end -}}
	goVersion string,

	// +defaultPath="/"
	source *dagger.Directory,
) *Go {
	return &Go{
		GoVersion: goVersion,
		Source:    source,
	}
}

// Base returns a container with the go project mounted
func (m *Go) Base(ctx context.Context) *dagger.Container {
	return dag.
		Container().
		From(fmt.Sprintf("golang:%s", m.GoVersion)).
		WithMountedDirectory("/src", m.Source).
		WithWorkdir("/src")
}

// Build returns a container with the go project mounted and builds the project
func (m *Go) Build(ctx context.Context) *dagger.Container {
	return m.
		Base(ctx).
		WithExec([]string{"go", "build", "-o", "main", "."})
}

// Lint returns a container with the go project mounted and runs the go vet command
func (m *Go) Lint(ctx context.Context) *dagger.Container {
	return m.
		Base(ctx).
		WithExec([]string{"go", "vet", "."})
}

// Test returns a container with the go project mounted and runs the go test command
func (m *Go) Test(ctx context.Context) *dagger.Container {
	return m.
		Base(ctx).
		WithExec([]string{"go", "test", "-v", "."})
}
